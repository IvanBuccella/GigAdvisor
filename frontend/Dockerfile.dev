ARG version
FROM node:${version}
WORKDIR /app
ENV PATH /app/node_modules/.bin:$PATH
COPY ./code/frontend/package.json ./
COPY ./code/frontend/package-lock.json ./
RUN npm ci --silent
RUN npm install -g --unsafe-perm=true --allow-root @ionic/cli native-run cordova-res @ionic/react @ionic/react-router @ionic/react-hooks @ionic/pwa-elements --silent
RUN npm install